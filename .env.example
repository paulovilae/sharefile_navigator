# Database configuration
# Choose one of: sqlite, postgres, mssql
DB_TYPE=sqlite
DATABASE_URL=sqlite:///ocr.db

# PostgreSQL settings (used when DB_TYPE=postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db

# Microsoft SQL Server settings (used when DB_TYPE=mssql)
MSSQL_HOST=mssql
MSSQL_PORT=1433
MSSQL_USER=your_mssql_user
MSSQL_PASSWORD=your_mssql_password
MSSQL_DB=your_mssql_db
MSSQL_PID=Express

# SharePoint integration settings
# Azure AD application credentials
CLIENT_ID=your_azure_ad_client_id
CLIENT_SECRET=your_azure_ad_client_secret
TENANT_ID=your_azure_ad_tenant_id

# SharePoint site configuration
SHAREPOINT_SITE=your_sharepoint_site_domain.sharepoint.com
SHAREPOINT_SITE_NAME=your_site_name